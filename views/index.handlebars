<section class="section center">
  <div class="container">
    <div class="row">
      <div class="col m4">
        {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=0}}
        {{/unless}}
        {{/each}}
      </div>
      <div class="col m4">
        <form class="add-burger">
          <div class="input-field">
            <textarea placeholder="burger" id="burger-name" class="materialize-textarea burger-input" maxlength="255" required></textarea>
          </div>
          <div class="input-field">
            <button class="btn-large" type="submit">Add Burger</button>
          </div>
        </form>
      </div>
      <div class="col m4">
        {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=1}}
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</section>